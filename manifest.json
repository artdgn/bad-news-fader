{
  "manifest_version": 2,
  "name": "Bad News Fader",
  "version": "0.1.0",
  "description": "Bad News Fader",
  "page_action" :
  {
    "default_icon" : "images/icon.png",
    "default_title" : "Bad News Fader"
  },
  "permissions": [
    "storage"
	],
  "content_scripts": [
    { 
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["js/jquery-3.1.1.min.js", "js/filter.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "options_ui" : {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
